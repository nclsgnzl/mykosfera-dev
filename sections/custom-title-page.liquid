<style>
  .element {
    width: 100%;
    height: 350px;
    background-color: #999999;
    background-image: url('{{ section.settings.title_background_image | image_url }}');
    background-color: fade(#ffffff, 50%);
    background-position: center;
    background-size: cover;
    background-repeat: repeat;
    padding-top: 50px;
    color: white;
  }

  .element h1 {
    color: white;
    margin-top: 10px;
  }
</style>

<div class="element" align="center">
  <img src="{{ section.settings.title_icon_page | image_url }}" alt="icone-image" style="width: 10%">
  <h1 class="text-title">{{ section.settings.title_page }}</h1>
</div>

{% schema %}
{
  "name": "Custom Title - Page",
  "settings": [
    {
      "type": "text",
      "id": "title_page",
      "label": "Ingresa un t√≠tulo"
    },
    {
      "type": "image_picker",
      "id": "title_icon_page",
      "label": "Selecciona un icono"
    },
    {
      "type": "image_picker",
      "id": "title_background_image",
      "label": "Selecciona una imagen de fondo"
    }
  ]
}
{% endschema %}
